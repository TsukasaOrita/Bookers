<h1>Editing Book</h1>
<%= render 'layouts/error_message', model: @book %>
<%= form_with model: @book, local:true do |f| %>

<div class="field">
 <label for="book title">Title</label>
  <%= f.text_field :title %>
</div>
<div class="field">
 <label for="book body">Body</label>
  <%= f.text_area :body %>
</div>
 <div class="action">
  <%= f.submit %>
</div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
 |
<%= link_to "Back", books_path %>